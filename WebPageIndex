<script type="text/javascript">
var gameImg = "razer.png";
function startTime() {
    var today = new Date();
    var h = today.getHours();
    var m = today.getMinutes();
    var s = today.getSeconds();
    m = checkTime(m);
    s = checkTime(s);
    document.getElementById('txt').innerHTML =
    h + ":" + m + ":" + s;
    var t = setTimeout(startTime, 500);
}
function checkTime(i) {
    if (i < 10) {i = "0" + i}; 
    return i;
}



function animate() {
if (gameImg=="razer.png")
gameImg="mario.png";
else
gameImg="razer.png";
document.getElementById("divGame").src = gameImg;
window.setTimeout(animate, 1000);
}


</script>
